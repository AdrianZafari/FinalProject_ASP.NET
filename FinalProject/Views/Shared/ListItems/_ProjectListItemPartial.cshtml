@model ProjectViewModel

@* It's worth noting that the "data-project-id" should be incremented so the dropdowns works as they should."*@

<div class="project card" data-project-id="@Model.ProjectId">
    <div class="card-header">
        <div class="project-image">
            <img src="@Model.ProjectImage" alt="template project">
        </div>
        <h6 class="project-name">@Model.ProjectName</h6>
        <span class="client-name">@Model.ClientName</span>
        <div id="project-actions-container">
            <button type="button" data-type="dropdown" data-target="#project-dropdown-@Model.ProjectId" class="btn-action">
                <i class="fa-solid fa-ellipsis" style="color: #465672"></i>
            </button>
            <div id="project-dropdown-@Model.ProjectId" class="dropdown ">
                <div class="dropdown-body">
                    <nav class="dropdown-actions">
                        <button data-type="modal" data-target="#edit-project-modal" class="dropdown-action">
                            <i class="fa-solid fa-edit"></i>
                            <span>Edit</span>
                        </button>
                        <button class="dropdown-action" href="#">
                            <i class="fa-solid fa-user-plus"></i>
                            <span>Add Member</span>
                        </button>
                    </nav>
                    <div class="divider"></div>
                    <nav class="dropdown-actions">
                        <a class="dropdown-action remove">
                            <i class="fa-solid fa-trash"></i>
                            <span>Delete Project</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
		<p>@Html.Raw(Model.Description)</p>
    </div>
    <div class="card-footer">
        <div class="badge badge-normal">
            <i class="fa-solid fa-clock"></i>
            <span>5 days left</span>
        </div>
        <div class="members">
            @if (Model.Members.Any())
            {
                <div class="user-image">
                    <img src="@Model.Members.First().MemberImage" alt="project member" />
                </div>
            }
            else
            {
                <div class="user-image">
                    <img src="/images/users/user-template-male-green.svg" alt="no member" />
                </div>
            }
        </div>
    </div>
</div>